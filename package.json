{
  "name": "outcome-signal",
  "version": "0.1.0",
  "private": true,
  "description": "OutcomeSignal - AI-powered initiative management platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
