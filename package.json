    "test:teardown": "tsx scripts/test-teardown.ts"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.9.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
